# Example backend env file for Docker release packaging
DATABASE_URL=sqlite:////data/backend_tarot.db
API_PROVIDER=zhipu
ZHIPUAI_API_KEY=your-zhipu-api-key
ZHIPU_MODEL_NAME=glm-4-flash
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o-mini
TEMPERATURE=0.7
RATE_LIMIT_PER_MINUTE=60
BATCH_SIZE=10
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=168
DEBUG=False
APP_BASE_URL=https://api.example.com
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=["zh-CN","en"]
CORS_ORIGINS=["https://app.example.com","https://admin.example.com"]
CORS_CREDENTIALS=False
STATIC_DIR=static
CARDS_IMAGE_PATH=static/images
ADMIN_USERNAME=admin
ADMIN_PASSWORD=please-change
ADMIN_SESSION_EXPIRE_HOURS=24
EMAIL_SMTP_HOST=smtp.qq.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_ADDRESS=example@example.com
EMAIL_FROM_NAME=Tarot Backend
EMAIL_PASSWORD=app-specific-password
EMAIL_USE_TLS=True
EMAIL_TIMEOUT=60
GOOGLE_PLAY_ENABLED=false
GOOGLE_PACKAGE_NAME=com.example.app
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=/app/creds/google-service-account.json
